<!DOCTYPE html>
<html>
  <head>
    <title>Sharebgm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= include_gon %>
  </head>
  <body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
    <header>
      <%= link_to image_tag('logo.png', :size => "150x60",:alt => "アイコン"),root_path %>
      
      <%= link_to " Logout" , destroy_user_session_path ,class: "logout btn btn-info btn-lg glyphicon glyphicon-log-out", method: :delete %>

    </header>
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %>"><%= message %></div>
    <% end %>
    <%= yield %>
    <script>
      window.setTimeout(function() {
        $(".alert").slideUp();
      }, 3000);
    </script>
  </body>
</html>
