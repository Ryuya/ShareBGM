<h1>Playlists#index</h1>
<p>プレイリスト一覧</p>

<%= link_to "新規プレイリスト", new_playlist_path %>

<ul>
    <% @playlists.each do |playlist| %>
        <li>
            <%= link_to playlist.name ,playlist_path(playlist) %>
            <%= link_to "編集", edit_playlist_path(playlist) %>
            <%= link_to "削除", playlist ,method: :delete ,data: { confirm: "You sure?" } %>
        </li>
    <% end %>
</ul>