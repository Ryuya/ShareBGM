<div class="main">
  <%= form_for @room do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.label :name, "ルーム名" %>
        <%= f.text_field :name, :size=>"100",cols: "30", rows: "10",placeholder: "ルーム名を入力してください。" %>
      </div>
      <div class="field">
        <%= f.label :description, "内容" %>
        <%= f.text_area :description, :size=>"100",cols: "30", rows: "10",placeholder: "内容" %>
      </div>
      <div class="field">
        <%= f.collection_select  :playlist_id, @pulldown_playlists, :id, :name ,{prompt: 'プレイリストを選択してください'}, {disabled: false}%>
        <% if @pulldown_playlists.empty? %>
          <%= f.collection_select  :playlist_id, @pulldown_playlists, :id, :name ,{prompt: 'プレイリストを選択してください'}, {disabled: true}%>
          <%= link_to "プレイリストを作成してください",new_playlist_path %>
        <%end%>
      </div>
      <div class="button_wrap">
        <input type="submit" value="保存する" class="button">
      </div>
  <% end %>
</div>